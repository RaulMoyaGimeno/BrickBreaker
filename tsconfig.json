{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./js",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true
  }
}
